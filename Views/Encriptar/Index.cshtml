@model IEnumerable<ExercicioCrpito.Models.EncriptarModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Texto Descriptografados</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Texto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Texto)
        </td>
        <td>
            @Html.ActionLink("Decriptar", "Edit", new { id=item.id }) |

        </td>
    </tr>
}

</table>
